@model FilterQuestionGetResponseViewModel

@if (Model.PreviousQuestionId != null)
{
    <br />
    <a asp-route="filterQuestions" asp-route-jobCategoryName="@Model.JobCategoryName" asp-route-questionid="@Model.PreviousQuestionId">Back to previous statement</a>
}

<br />
@Model.PercentageComplete.ToString("P0")

@Html.ValidationSummary()

<h1>@Model.QuestionText</h1>

<form method="post">
    <input type="hidden" id="QuestionSetName" name="QuestionSetName" value="@Model.QuestionSetName" />
    <input type="hidden" id="QuestionId" name="QuestionId" value="@Model.QuestionId" />

    <p>
        <input type="radio" value="1" name="answer" />Strongly agree
    </p>
    <p>
        <input type="radio" value="2" name="answer" />Agree
    </p>
    <p>
        <input type="radio" value="3" name="answer" />It depends
    </p>
    <p>
        <input type="radio" value="4" name="answer" />Disagree
    </p>
    <p>
        <input type="radio" value="5" name="answer" />Strongly disagree
    </p>

    <button>Next</button>
</form>

<hr />
<h3>Return to this later</h3>
