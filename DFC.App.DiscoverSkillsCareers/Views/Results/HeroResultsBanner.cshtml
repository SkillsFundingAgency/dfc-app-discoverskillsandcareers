@model ResultsHeroBannerViewModel
<partial name="_ResultsHeader" />
<div class="secondary-hero">
    <div class="govuk-main-wrapper govuk-width-container govuk-!-padding-top-7">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds app-intro">
                <h2 class="govuk-heading-l">What you told us</h2>
                <div class="govuk-text">
                    <p>Your answers show that:</p>
                    <ul class="govuk-list govuk-list--bullet">
                        @foreach (var trait in Model.Traits)
                        {
                            <li>@trait</li>
                        }
                    </ul>
                    @if(Model.IsCategoryBanner)
                    {
                        @if (Model.NumberOfCategories > 0)
                        {
                            <p>The following job categories are based on the answers you have given. You can choose to view more results at the bottom of the page.</p>
                        }
                        else
                        {
                            <p>We could not recommend any careers based on your responses. You might want to <a href="/discover-your-skills-and-careers/assessment/short/new">go through the assessment again</a> to check that your responses were accurate.</p>
                        }
                    }
                </div>
            </div>
            <div class="govuk-grid-column-one-third">
                <div class="app-sidebar app-resume-panel app-related-items">
                  <div class="app-sidebar app-resume-panel">
                    <h2 class="govuk-heading-m">Next steps</h2>
                
                    <ul class="govuk-list govuk-list--spaced print-button-container">
                      <li>
                        <a href="/discover-your-skills-and-careers/assessment/email" class="govuk-link govuk-link--no-visited-state">Email your results</a>
                      </li>
                
                      <li>
                        <a href="/skills-assessment/skills-health-check/home" class="govuk-link govuk-link--no-visited-state">Take a skills health check</a>
                      </li>
                
                      <li>
                        <a href="/skills-assessment" class="govuk-link govuk-link--no-visited-state">Return to skills assessment</a>
                      </li>
                    </ul>
                  </div>
                </div>
                <div>
                    <partial name="_SpeakToAnAdviser" />
                </div>
            </div>
        </div>
    </div>
</div>

