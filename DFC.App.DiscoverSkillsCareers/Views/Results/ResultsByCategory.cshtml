@model ResultsByCategoryModel
<partial name="_SendMyResults" model="@Model.AssessmentReference" />
<h2 class="govuk-heading-l">Job roles that might suit you</h2>
<div class="govuk-template__body  app-page--results-long js-enabled" id="top">
    <div class="app-results">
        @foreach (var jobCategory in Model.JobsInCategory.OrderByDescending(c => c.DisplayOrder))
        {
            <div class="app-results__item" data-job-family-code="@jobCategory.CategoryCode">
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">
                        <h2 class="govuk-heading-m govuk-!-margin-bottom-1"><a href="https://nationalcareers.service.gov.uk/job-categories/@jobCategory.CategoryUrl">@jobCategory.CategoryTitle</a></h2>
                        @if (jobCategory.AnswerMoreQuetions == 0)
                        {

                            if (@jobCategory.JobProfiles.Count() > 0)
                            {
                                <p class="text-light">@jobCategory.JobProfiles.Count() Job role@{if (@jobCategory.JobProfiles.Count() > 1)@("s")} that might suit you</p>
                            }
                            else
                            {
                                <p class="text-light"><span>No job roles were found that might be suited to you</span></p>
                            }
                            <p><a asp-route="filterquestions" role="button" asp-route-assessmenttype="@Model.AssessmentType" asp-route-jobCategoryName="@jobCategory.CategoryUrl" asp-route-questionNumber="0">Change my answers</a></p>

                            @if (jobCategory.ShowThisCategory)
                            {
                                <ul class="app-long-results govuk-list govuk-grid-row" id="app-results-list--long">
                                    @foreach (var profile in jobCategory.JobProfiles.Where(p => p.ReturnedStatusCode != System.Net.HttpStatusCode.NotFound))
                                    {
                                        <li class="">
                                            <div class="app-long-results__item">
                                                @Html.Raw(profile.OverViewHTML)
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="app-noprint">View job roles you might be suited to in @jobCategory.CategoryTitle</p>
                                <a role="button" class="govuk-button app-button" asp-controller="results" asp-action="roles" asp-route-id="@jobCategory.CategoryUrl" draggable="false">See results</a>
                            }
                        }
                        else
                        {
                            <p>To find out job roles you might be suited to in @(jobCategory.CategoryTitle), answer more questions.</p>
                            <a asp-route="filterquestions" role="button" class="govuk-button app-button" asp-route-assessmenttype="@Model.AssessmentType" asp-route-jobCategoryName="@jobCategory.CategoryUrl" asp-route-questionNumber="0">Answer @jobCategory.AnswerMoreQuetions more question@{if (@jobCategory.AnswerMoreQuetions > 1)@("s")}</a>
                        }
                    </div>
                </div>
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds">
                        <p class="show-more"> </p>
                        <hr>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
