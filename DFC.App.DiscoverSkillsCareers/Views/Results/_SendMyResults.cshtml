@model string
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="app-sendresults">
            <div class="app-sendresults__text">
                <h2 class="govuk-heading-m">Send my results</h2>
                <p>Choose to have your results sent by email, or use a reference code to see them.</p>
            </div>
            <div class="app-sendresults__button">
                <a class="govuk-button ncs-button__primary app-button" asp-controller="assessment" asp-action="save">Continue</a>
            </div>
        </div>
        <div class="app-printcode">
                <h2 class="govuk-heading-m">Return to your results</h2>
                <p>Your reference number is <strong>@Model</strong></p>
        </div>
    </div>
</div>

