@model ResultIndexResponseViewModel
@inject IConfiguration configuration

<div class="ncs-highlight-box-with-image">
    <div class="ncs-highlight-box-with-image__content">
        <div class="ncs-highlight-box-with-image__content__desc">
            <h3>Start a new skills assessment</h3>
            <p class="govuk-body">If you do a skills assessment again, it could be useful to:</p>
            <ul class="govuk-list govuk-list--bullet ul-dysac govuk-!-margin-bottom-5">
                <li>think carefully about each statement </li>
                <li>go with your first answer and try not to overthink it</li>
                <li>be as confident as you can</li>
            </ul>
        </div>
        <div class="ncs-highlight-box-with-image__content__image">
            <img  src="@configuration["AssetsCdn"]media/dysac/salandingcheckbox.svg" alt="" />
        </div>
    </div>
    <a role="button" class="govuk-button ncs-button__primary app-button govuk-!-margin-bottom-0" asp-controller="start" draggable="false">Start a new skills assessment</a>
</div>