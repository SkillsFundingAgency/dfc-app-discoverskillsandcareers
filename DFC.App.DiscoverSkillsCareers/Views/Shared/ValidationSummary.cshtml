@model ModelStateDictionary

    <div class="@(Model.IsValid ? "dfc-composite-shell-hide" : "validation-summary-errors") govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary" data-valmsg-summary="true">
     <h2 class="govuk-error-summary__title" id="error-summary-title">There is a problem</h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var modelError in Model.SelectMany(keyValuePair => keyValuePair.Value.Errors))
                {
                    <li>
                        <a href="#code" class="govuk-link govuk-link--no-visited-state">@modelError.ErrorMessage</a>
                    </li>
                }
            </ul>
        </div>
</div>
