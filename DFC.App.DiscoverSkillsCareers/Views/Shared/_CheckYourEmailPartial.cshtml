@model string

<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-body">
                <h1 class="govuk-heading-xl">Check your email</h1>
                <p>An email has been sent to  @TempData.Peek("SentEmail")</p>
                <p>This includes your reference code and a link to return to your assessment at any time.</p>
                @if (@Model == PageTitle.Start)
                {
                <form method="post" asp-action="new" asp-controller="assessment">
                    <input type="hidden" id="assessmentType" name="assessmentType" value="short" />
                    <button role="button" draggable="false" type="submit" class="govuk-button ncs-button__primary" data-module="govuk-button">
                        Start assessment                       
                    </button>
                </form>
                }
                else {
                <a asp-controller="assessment" class="govuk-button ncs-button__primary" asp-action="return">Return to assessment</a>
                }
            </div>
        </div>
    </div>
</div>