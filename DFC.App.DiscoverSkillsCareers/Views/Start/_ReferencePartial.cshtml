@model StartViewModel
<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            
                <h1 class="govuk-heading-l">Your reference code</h1>

                <p>Before you start, here’s your personal reference code. Your progress is automatically saved under this code. </p>
                <p>Use your reference code to: </p>

                <ul class="govuk-list govuk-list--bullet">
                    <li>return to your assessment if you want to finish later</li>
                <li>come back to see your results</li>
                </ul>
            <p> Make a note of your reference code, or choose to get it sent to you </p>
                <div class="app-your-reference govuk-body">
                    <p>
                        <span class="app-your-reference__code govuk-heading-xl">@Model.ReferenceCode</span>
                    </p>
                    <div class="app-your-reference__meta govuk-grid-row">
                        <p class="govuk-grid-column-one-third govuk-body-s">@Model.AssessmentStarted</p>
                        <p class="govuk-grid-column-two-thirds govuk-body-s"></p>
                    </div>
                </div>                              
            
            <form method="post" asp-action="new" asp-controller="assessment">
                <input type="hidden" id="assessmentType" name="assessmentType" value="short" />
                <button role="button" draggable="false" class="govuk-button ncs-button__primary" data-module="govuk-button">
                    Start your assessment
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                    </svg>
                </button>
            </form>            
        </div>
    </div>
</div>